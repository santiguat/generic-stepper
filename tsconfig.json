{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["esnext.array", "esnext", "es2017", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["/src/app/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
